<Window x:Class="IsEnabled.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsEnabled"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200">
    <StackPanel Margin="10">
        <TextBox Margin="5" x:Name="text" TextChanged="text_TextChanged" />
        <Button Margin="5" x:Name="button" Click="Button_Click" IsEnabled="False">Ok</Button>
    </StackPanel>
</Window>
