<Window x:Class="Celsius2Fahrenheit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Celsius2Fahrenheit"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Label Margin="5">Temperatur in °C:</Label>
        <TextBox Margin="5" MinWidth="200" TextChanged="TextBox_TextChanged" />
        <Label Margin="5" x:Name="fahrenheit">Temperatur eingeben!</Label>
    </StackPanel>
</Window>
