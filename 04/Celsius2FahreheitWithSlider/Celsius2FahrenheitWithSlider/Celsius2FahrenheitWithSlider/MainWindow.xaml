<Window x:Class="Celsius2FahrenheitWithSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Celsius2FahrenheitWithSlider"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Slider Margin="5" x:Name="slider" Minimum="-100" Maximum="100" Value="0" ValueChanged="Slider_ValueChanged" />
        <Label Margin="5" x:Name="celsius">Temperatur in °C: </Label>
        <Label Margin="5" x:Name="fahrenheit">Temperatur in °F: </Label>
    </StackPanel>
</Window>
