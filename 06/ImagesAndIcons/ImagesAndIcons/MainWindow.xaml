<Window x:Class="ImagesAndIcons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImagesAndIcons"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <StackPanel>
        <StackPanel Background="White" Orientation="Horizontal">
            <Image Source="/ImagesAndIcons;component/Images/duck.png" Stretch="Uniform" Width="100"/>
            <Image Source="pack://application:,,,/Images/dog.png" Width="100" Opacity="0.5" />
        </StackPanel>
        <Button Margin="5">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="File" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" />
                <Label VerticalAlignment="Center">Neue Datei</Label>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
