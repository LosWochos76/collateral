<Window x:Class="ComboBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBoxDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <StackPanel Margin="5">
        <ComboBox Margin="5" ItemsSource="{Binding Countries}" x:Name="combobox" />
        <Button Margin="5" Click="Button_next_Country_Click">Nächstes Land</Button>
        <Button Margin="5" Click="Button_Deutschland_Click">Deutschland</Button>
    </StackPanel>
</Window>
